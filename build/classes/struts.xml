<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
   "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

<package name="default" extends="struts-default">

<action name="login" class="com.javatpoint.LoginAction" method="login">
<result name="none">login.jsp</result>
<result name="input">login.jsp</result>
<result name="success">success.jsp</result>
<result name="error">fail.jsp</result>
</action>

<action name="logout" class="com.javatpoint.LogoutAction">  
<result name="success">success.jsp</result>
<result name="error">fail.jsp</result>
</action>

<action name="register" class="com.javatpoint.RegisterAction" method="register">
<result name="none">register.jsp</result>
<result name="input">register.jsp</result>
<result name="success">success.jsp</result>
<result name="error">fail.jsp</result>
</action>

<action name="profile" class="com.javatpoint.ProfileAction">
<result name="success">profile.jsp</result>
<result name="error" type="redirectAction">login</result>
</action>

</package>
</struts>    
